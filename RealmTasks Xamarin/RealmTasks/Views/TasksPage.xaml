<?xml version="1.0" encoding="UTF-8"?>
<local:PageBase xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:RealmTasks;assembly=RealmTasks"
             x:Class="RealmTasks.TasksPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding AddTaskCommand}">
		    <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource" iOS="add.png" Android="add.png" />
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ListView ItemsSource="{Binding TaskList.Items}" 
				x:Name="TasksListView" 
				RowHeight="60"
                SeparatorVisibility="None"
                BackgroundColor="Black">
			<ListView.Behaviors>
                <local:CellDeselectingBehavior />
            </ListView.Behaviors>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell x:Name="TaskCell">
                        <ViewCell.ContextActions>
                            <MenuItem Text="Delete"
                                      IsDestructive="true"
                                      BindingContext="{Binding Source={x:Reference TasksListView}, Path=BindingContext}" 
                                      Command="{Binding DeleteTaskCommand}"
                                      CommandParameter="{Binding Source={x:Reference TaskCell}, Path=BindingContext}" />
                        </ViewCell.ContextActions>
                        <Grid>
							<Grid.Behaviors>
                                <local:ItemColoringBehavior x:TypeArguments="local:Task"
                                    RealmCollection="{Binding ItemsSource, Source={x:Reference TasksListView}}"
									Colors="{StaticResource TaskColors}"/>
                            </Grid.Behaviors>
                            <Entry Text = "{Binding Title}"
                                   Margin = "5" 
                                   VerticalOptions="Center" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</local:PageBase>
