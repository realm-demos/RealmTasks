source 'https://github.com/CocoaPods/Specs.git'

abstract_target 'RealmTasks' do
    use_frameworks!

    pod 'RealmSwift'		#, '= 2.10.1'
    pod 'Cartography', :git => 'https://github.com/robb/Cartography.git'
    pod 'SwiftLint', '= 0.16.1'

    target 'RealmTasks iOS' do
        platform :ios, '9.0'
        pod 'RealmLoginKit'
    end

    target 'RealmTasks macOS' do
        platform :osx, '10.10'
    end

    target 'RealmTasks iOS Tests' do
        platform :ios, '9.0'
    end
end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            # Signing
            config.build_settings['PROVISIONING_PROFILE_SPECIFIER'] = ''
        end
    end
end
